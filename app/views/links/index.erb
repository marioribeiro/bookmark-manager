<h1>Links</h1>
<div id="links">
<% @links.each do |link| %>
  <div class="panel panel-default">
    <div class="panel-heading">
     <h3 class="panel-title"><%= link.title %></h3>
  </div>
  <div class="panel-footer">
    <% link.tags.map do |tag| %>
      <a href="/tags/<%= tag.name %>"><span class="label label-default"><%= tag.name %></span></a>
    <% end %>
  </div>
</div>
<% end %>
</div>